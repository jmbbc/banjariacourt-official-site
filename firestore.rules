rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public can read AGM/EGM reports; only the admin email can write
    match /reports/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'jmbbanjariacourt.agm@gmail.com';
    }

    // CMS content sections (announcements, activities, facilities, forms, vendors, quotes, etc.)
    match /content/{section} {
      allow read: if true;
      // Allow write if the signed-in user's email matches the admin email
      // OR if the user's UID matches the admin UID (replace with actual admin UID).
      // Note: after changing these rules, run `firebase deploy --only firestore:rules` to apply them.
      allow write: if request.auth != null && (
        request.auth.token.email == 'jmbbanjariacourt.agm@gmail.com' ||
        request.auth.uid == 'SmWu2grNVqa2kv2Fp43YWJCmVpr2'
      );
    }

    // Default: deny everything else (tighten surface)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
